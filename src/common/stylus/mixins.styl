border-1px($color)
  position relative
  border none
  &:after
    content ''
    position absolute
    bottom 0
    left 0
    background $color
    width 100%
    height 1px
    transform scaleY(0.5)

bg-image($url)
  background-image url("./images/" + $url +"@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url("./images/" + $url +"@3x.png")


bg-star($url)
  background-image url( '../star/images/'+$url +"@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url('../star/images/'+ $url +"@3x.png")

fade-out(color, amount = 50%)
  color - rgba(0,0,0,amount)
